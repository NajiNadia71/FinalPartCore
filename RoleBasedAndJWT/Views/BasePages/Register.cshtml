@model ViewModelAnd.RegisterModel
@{
    Layout = "_Layout";
}

<div class="container" style="padding-top:10%">
    <div class="row"> <h1>Register form </h1></div>
    <form method="post" enctype="multipart/form-data" asp-controller="BasePages" asp-action="Register">
      
